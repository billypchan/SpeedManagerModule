// Release Configuration for App Store Distribution
// Disable code coverage and profiling for release builds

// Code Coverage Settings
CLANG_ENABLE_CODE_COVERAGE = NO
GCC_GENERATE_TEST_COVERAGE_FILES = NO
GCC_INSTRUMENT_PROGRAM_FLOW_ARCS = NO

// Testability Settings  
ENABLE_TESTABILITY = NO

// Swift Compiler Flags - Disable Profiling
SWIFT_ACTIVE_COMPILATION_CONDITIONS = RELEASE
OTHER_SWIFT_FLAGS = -Xfrontend -no-serialize-debugging-options -Xfrontend -disable-legacy-type-info -Xfrontend -disable-llvm-value-names -disable-incremental-llvm-codegen
SWIFT_ENABLE_TESTABILITY = NO
ENABLE_CODE_COVERAGE = NO

// Code Signing (for framework builds)
CODE_SIGN_IDENTITY = 
CODE_SIGNING_REQUIRED = NO

// Optimization
GCC_OPTIMIZATION_LEVEL = s
SWIFT_OPTIMIZATION_LEVEL = -O

// Disable Debug Information Generation for Release
DEBUG_INFORMATION_FORMAT = 
GENERATE_PROFILING_CODE = NO

// Other Release Settings
DEPLOYMENT_POSTPROCESSING = NO
COPY_PHASE_STRIP = NO
STRIP_INSTALLED_PRODUCT = NO
STRIP_STYLE = non-global